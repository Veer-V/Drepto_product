generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  email        String         @unique
  password     String
  firstName    String
  lastName     String
  phoneNumber  String?
  gender       String?
  age          Int?
  role         String         @default("Patient")
  isFirstOrder Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  subscriptions Subscription[]
  orders        Order[]
  cart          Cart?
}

model Product {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  description         String
  detailedDescription String?
  price               Float
  mrp                 Float?
  images              String[]
  category            String
  ingredients         String[]
  benefits            String[]
  sideEffects         String[]
  developmentStory    String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  orderItems          OrderItem[]
  cartItems           CartItem[]
}

model Subscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  plan      String
  status    String
  startDate DateTime @default(now())
  endDate   DateTime
  
  // Snapshot details
  userName    String?
  userEmail   String?
  userContact String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  userId    String      @db.ObjectId
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  total     Float
  discount  Float       @default(0)
  finalPrice Float
  coupon    String?
  status    String      @default("PENDING")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id])
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float   // Price at time of purchase
}

model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @unique @db.ObjectId
  user      User       @relation(fields: [userId], references: [id])
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String  @db.ObjectId
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int     @default(1)
}

model Doctor {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  specialty       String
  qualification   String
  experience      Int
  rating          Float         @default(0)
  reviews         Int           @default(0)
  consultationFee Float
  image           String?
  about           String?
  available       Boolean       @default(true)
  appointments    Appointment[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Appointment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  patientId String   @db.ObjectId
  // In a real app, this would relate to User, but we'll keep it flexible for now
  // patient   User     @relation(fields: [patientId], references: [id]) 
  
  doctorId  String   @db.ObjectId
  doctor    Doctor   @relation(fields: [doctorId], references: [id])
  
  date      DateTime
  time      String   // Using string for slot "10:00 AM" for simplicity
  type      String   // "Video", "Audio", "Chat"
  status    String   @default("UPCOMING") // UPCOMING, COMPLETED, CANCELLED
  
  paymentStatus String @default("PENDING")
  amount        Float
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prescription {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    appointmentId String @db.ObjectId
    medicines String[] // Simplified list of strings for now
    notes String?
    createdAt DateTime @default(now())
}
